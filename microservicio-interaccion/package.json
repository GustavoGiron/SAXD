    "docker:run": "docker-compose up",
    "docker:down": "docker-compose down",
    "db:init": "mysql -u root -p < database/init.sql"
  },
  "keywords": [
    "microservice",
    "nodejs",
    "mysql",
    "chapinflix",
    "streaming"
  ],
  "author": "Grupo #2",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
