{
  "name": "microservicio-interaccion",
  "version": "1.0.0",
  "description": "Microservicio de Interacción para Chapinflix - Gestión de Favoritos, Ver Luego y Progreso",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
